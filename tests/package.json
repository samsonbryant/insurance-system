{
  "name": "insurance-verification-tests",
  "version": "1.0.0",
  "description": "Test suite for Insurance Verification System",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.35.0",
    "axios": "^1.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/index.js",
      "!server/migrations/**",
      "!server/seeders/**"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
